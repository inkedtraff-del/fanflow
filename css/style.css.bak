/* === MODULES: EXACT SAME PLUS BOX AS FAQ (NO HTML CHANGES) === */

.modules-accordion .faq-question{
  /* сохраняем твой FAQ-лайаут; на всякий */
  display: grid;
  grid-template-columns: 1fr 26px;
  gap: 16px;
  align-items: center;
}

/* белый квадрат справа */
.modules-accordion .faq-question::after{
  content: "";
  width: 26px;
  height: 26px;
  justify-self: end;
  background-color: #fff;

