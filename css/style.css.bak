/* =========================
   FOOTER BACKGROUND + FADE
   (placed at the very end to override global background resets)
========================= */

.footer.footer--bg{
  position: relative;
  overflow: hidden;
  background: #000 !important;

  /* меньше высота картинки/футера (в 2 раза компактнее) */
  min-height: 260px;

  display: flex;
  align-items: flex-end;
}

/* Фон-картинка + градиент к ВЕРХУ:
   в центре/ниже — прозрачно, сверху — уходит в чёрный */
.footer.footer--bg::before{
  content: "";
  position: absolute;
  inset: 0;

  background-image:
    linear-gradient(
      to bottom,
      #000 0%,
      rgba(0,0,0,0.85) 28%,
      rgba(0,0,0,0.35) 45%,
      rgba(0,0,0,0) 70%
    ),
    url("../assets/images/footer-bg.png");

  background-repeat: no-repeat, no-repeat;
  background-position: top center, center;
  background-size: 100% 100%, cover;

  opacity: 0.95;
  z-index: 0;
}

/* Контент поверх */
.footer.footer--bg .footer-inner{
  position: relative;
  z-index: 1;

  width: 100%;
  padding: 28px 0 32px;

  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 10px;
  opacity: 1 !important;
}

.footer.footer--bg .footer-copy{
  opacity: 0.85;
  font-size: 14px;
}

.footer.footer--bg .footer-slogan{
  opacity: 0.85;
  font-size: 14px;
  line-height: 1.35;
}

