/* =========================
   GOLD EDGE FLOW (FLOW CARD)
========================= */
.price-card.featured{
  position: relative;
  border-radius: 16px;
  background: rgba(255,255,255,.02);
  border: 1px solid rgba(255,255,255,.15);
}

/* edge-only flowing gold */
.price-card.featured::before{
  content:"";
  position:absolute;
  inset:0;
  border-radius: inherit;
  padding:2px; /* border thickness */
  background:
    linear-gradient(
      90deg,
      rgba(255,200,80,.15),
      rgba(255,215,120,.95),
      rgba(255,235,160,.25),
      rgba(255,180,60,.95),
      rgba(255,200,80,.15)
    );
  background-size: 300% 100%;
  animation: gold-edge-flow 3s linear infinite;

  -webkit-mask:
    linear-gradient(#000 0 0) content-box,
    linear-gradient(#000 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;

  pointer-events:none;
}

/* keep content above */
.price-card.featured > *{
  position:relative;
  z-index:1;
}

@keyframes gold-edge-flow{
  from { background-position:   0% 50%; }
  to   { background-position: 300% 50%; }
}

@media (prefers-reduced-motion: reduce){
  .price-card.featured::before{ animation:none; }
}



.price-card .price-badge{
  position: absolute;
  top: -12px;
  right: 16px;
  z-index: 3;
}

/* ensure gold border stays behind badge */
.price-card.featured::before{
  z-index: 1;
}


/* =========================
   FIX: POPULAR BADGE POSITION (INSIDE)
========================= */
.price-card{
  position: relative;
}

.price-card .price-badge{
  position: absolute;
  top: 12px;       /* inside the frame */
  right: 12px;
  z-index: 3;
}

/* ensure gold border stays behind badge */
.price-card.featured::before{
  z-index: 1;
}


/* =========================
   WIDTH SYSTEM
   Mobile: nice readable blocks (640px max)
   Desktop: match PRICING card width (FLOW)
========================= */
:root{
  /* base readable width */
  --rect-w: min(640px, calc(100% - 32px));
  /* pricing container width equals .container */
  --pricing-container-w: min(1100px, calc(100% - 32px));
  --pricing-card-w: var(--pricing-container-w); /* mobile (1 column) */
}

/* pricing grid becomes 3 columns at 901px, gap is 16px => 2 gaps total 32px */
@media (min-width: 901px){
  :root{
    --pricing-card-w: calc((var(--pricing-container-w) - 32px) / 3);
    --rect-w: var(--pricing-card-w); /* desktop: match FLOW width */
  }
}

/* Apply unified width ONLY to rectangle blocks (do NOT touch containers) */
.about .about-list,
.section-list,
.course-list,
.modules .faq-list,
.faq .faq-list,
.modules .modules-accordion,
.reviews .reviews-grid,
.reviews .reviews-list,
.reviews .reviews-wrap{
  width: var(--rect-w) !important;
  max-width: var(--rect-w) !important;
  margin-left: auto !important;
  margin-right: auto !important;
}

/* Ensure children fill the block */
.about .about-list li,
.section-list li,
.course-list li,
.modules .faq-item,
.faq .faq-item,
.reviews .review-item,
.reviews .review-card{
  width: 100% !important;
}
