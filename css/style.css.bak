


:root{
  --bg: #0b0c10;
  --text:#e9ecf1;
  --muted:#b7bfcc;
  --border: rgba(255,255,255,.08);
}

*{ box-sizing:border-box; }
html,body{ height:100%; }

body{
  margin:0;
  font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  background: var(--bg);
  color: var(--text);
}

.container{
  width: min(1100px, calc(100% - 32px));
  margin: 0 auto;
}

/* =========================
   HERO
========================= */

.hero{
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

/* фон */
.hero-bg{
  position: absolute;
  inset: 0;
  background:
    linear-gradient(
      to bottom,
      rgba(11,12,16,.85) 0%,
      rgba(11,12,16,.45) 45%,
      rgba(11,12,16,.9) 100%
    ),
    url("../assets/images/hero-bg.jpg") center / cover no-repeat;
  filter: grayscale(100%) contrast(1.15);
  z-index: 1;
}

/* контент */
.hero-content{
  position: relative;
  z-index: 3; /* ← ВАЖНО: ВЫШЕ ГРАДИЕНТА */

  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;

  padding-top: 6vh;
  padding-bottom: 6vh;
  text-align: center;
}

.brand{
  font-weight: 700;
  font-size: 16px;
  opacity: .9;
}

.hero-title{
  margin: 12px 0 8px;
  font-size: clamp(64px, 18vw, 140px);
  line-height: .9;
  letter-spacing: -.06em;
  text-transform: uppercase;

  width: calc(100% + 32px);
  margin-left: -16px;
  margin-right: -16px;

  white-space: nowrap;
}

.hero-subtitle{
font-size: clamp(20px, 2.8vw, 28px);
  line-height: 1.3;
  max-width: 680px;
  margin: 14px auto 0;
  opacity: .9;
  text-align: center;
}

/* низ hero */
.hero-bottom{
  margin-top: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 14px;
}

.hero-tagline{
  font-size: clamp(16px, 3.6vw, 20px);
  opacity: .9;
}

/* =========================
   HERO BUTTON
========================= */

.hero-btn{
  display: inline-flex;
  align-items: center;
  justify-content: center;

  padding: 14px 28px;

  font-size: 16px;
  font-weight: 700;
  text-decoration: none;
  color: #111;

  background: rgba(255,255,255,.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);

  border-radius: 0;              /* ← БЕЗ СКРУГЛЕНИЙ */
  box-shadow:
    0 12px 30px rgba(0,0,0,.4),
    inset 0 1px 0 rgba(255,255,255,.6);

  transition: transform .15s ease, box-shadow .15s ease;
}


.hero-btn:hover{
  transform: translateY(-2px);
  box-shadow:
    0 18px 40px rgba(0,0,0,.5),
    inset 0 1px 0 rgba(255,255,255,.8);
}

/* =========================
   HERO → NEXT BLOCK FADE
========================= */

.hero-fade{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -1px;
  height: 180px;
  z-index: 2; /* ← МЕЖДУ ФОНОМ И ТЕКСТОМ */
  pointer-events: none;

  background: linear-gradient(
    to bottom,
    rgba(11,12,16,0) 0%,
    rgba(11,12,16,.45) 40%,
    rgba(11,12,16,.75) 70%,
    #0b0c10 100%
  );
}

/* =========================
   SECTIONS
========================= */

.section{
  padding: 80px 0;
}

.section-dark{
  background: #0b0c10;
  color: #ffffff;
}

/* =========================
   SAFE AREA (iPhone)
========================= */

@supports (padding: max(0px)){
  .hero-content{
    padding-top: calc(6vh + env(safe-area-inset-top));
    padding-bottom: calc(6vh + env(safe-area-inset-bottom));
  }
}

/* =========================
   MOBILE
========================= */

@media (max-width: 480px){
  .hero-title{
    width: calc(100% + 24px);
    margin-left: -12px;
    margin-right: -12px;
  }
}
/* =========================
   ABOUT (CENTERED, COMPACT)
========================= */

.about{
  padding: 40px 0; /* было 80px → уменьшили вдвое */
}

.about-wrap{
  max-width: 720px;
  margin: 0 auto;
  text-align: center;
}

.about-title{
  font-size: clamp(26px, 4.5vw, 36px);
  font-weight: 800;
  margin-bottom: 16px;
  letter-spacing: -.02em;
}

.about-main{
  font-size: 18px;
  line-height: 1.4;
  margin-bottom: 18px;
  opacity: .9;
}

.about-list{
  list-style: none;
  padding: 0;
  margin: 0 0 18px;

  text-align: left;          /* ← влево */
  max-width: 520px;          /* аккуратная ширина */
  margin-left: auto;
  margin-right: auto;
}

.about-list li{
  font-size: 15px;
  padding: 8px 0;
  text-transform: uppercase; /* ← ЗАГЛАВНЫЕ */
  letter-spacing: .06em;
  opacity: .85;
  border-bottom: 1px solid rgba(255,255,255,.12);
}


.about-note{
  font-size: 15px;
  opacity: .7;
}
/* =========================
   COURSE — WHAT WILL BE
========================= */

.course{
  padding: 48px 0; /* компактно */
}

.course-wrap{
  max-width: 820px;
  margin: 0 auto;
}

.course-title{
  text-align: center;
  font-size: clamp(26px, 4.5vw, 36px);
  font-weight: 800;
  margin-bottom: 28px;
  letter-spacing: -.02em;
}

.course-list{
  list-style: none;
  padding: 0;
  margin: 0;

  text-align: left;
}

.course-list li{
  font-size: clamp(18px, 4vw, 26px); /* большие */
  padding: 14px 0;
  text-transform: uppercase;
  letter-spacing: .04em;
  border-bottom: 1px solid rgba(255,255,255,.14);
}
/* =========================
   MODULES (ACCORDION)
========================= */

.modules{
  padding: 48px 0;
}

.modules-wrap{
  max-width: 820px;
  margin: 0 auto;
}

.modules-title{
  text-align: center;
  font-size: clamp(26px, 4.5vw, 36px);
  font-weight: 800;
  margin-bottom: 32px;
}

.modules-list{
  display: flex;
  flex-direction: column;
}

.module{
  border-bottom: 1px solid rgba(255,255,255,.14);
}

.module-head{
  width: 100%;
  background: none;
  border: none;
  padding: 18px 0;
  cursor: pointer;

  display: flex;
  align-items: center;
  justify-content: space-between;

  color: #fff;
  text-align: left;
}

.module-num{
  font-size: 14px;
  letter-spacing: .12em;
  opacity: .6;
}

.module-name{
  font-size: clamp(18px, 4vw, 26px);
  letter-spacing: .04em;
  text-transform: uppercase;
}

.module-body{
  max-height: 0;
  overflow: hidden;
  transition: max-height .35s ease;
}

.module-body ul{
  list-style: none;
  padding: 0 0 18px;
  margin: 0;
}

.module-body li{
  padding: 8px 0;
  font-size: 15px;
  letter-spacing: .06em;
  opacity: .85;
  text-transform: uppercase;
}

/* active */
.module.active .module-body{
  max-height: 400px;
}
/* =========================
   REVIEWS
========================= */

.reviews{
  padding: 48px 0;
}

.reviews-wrap{
  max-width: 900px;
  margin: 0 auto;
}

.reviews-title{
  text-align: center;
  font-size: clamp(26px, 4.5vw, 36px);
  font-weight: 800;
  margin-bottom: 32px;
}

.review{
  display: flex;
  gap: 20px;
  align-items: flex-start;
  padding: 20px 0;
  border-bottom: 1px solid rgba(255,255,255,.14);
}

.review-photo{
  width: 96px;
  height: 96px;
  flex-shrink: 0;
  overflow: hidden;
  border-radius: 12px;
}

.review-photo img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(100%) contrast(1.05);
}

.review-content{
  flex: 1;
}

.review-text{
  font-size: 16px;
  line-height: 1.45;
  opacity: .9;
  margin-bottom: 8px;
}

.review-author{
  font-size: 14px;
  opacity: .6;
}

/* Mobile */
@media (max-width: 600px){
  .review{
    gap: 14px;
  }

  .review-photo{
    width: 72px;
    height: 72px;
  }
}
/* =========================
   FEATURED REVIEW (APPLE STYLE)
========================= */

.review-feature{
  background: #f4f4f2;        /* светлый фон */
  color: #0b0c10;
  padding: 80px 0;
}

.review-feature-wrap{
  max-width: 1100px;
  margin: 0 auto;

  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 64px;
  align-items: center;
}

.review-feature-media img{
  width: 100%;
  height: auto;
  display: block;
  border-radius: 12px;
  object-fit: cover;
}

.review-feature-text{
  font-size: clamp(20px, 2.4vw, 28px);
  line-height: 1.35;
  margin-bottom: 24px;
}

.review-feature-text strong{
  font-weight: 800;
}

.review-feature-author{
  font-size: 16px;
  opacity: .65;
}

/* Mobile */
@media (max-width: 900px){
  .review-feature-wrap{
    grid-template-columns: 1fr;
    gap: 32px;
  }
}
/* =========================
   REVIEWS — FINAL FIX
========================= */

.review-row{
  display: grid;
  grid-template-columns: 160px 1fr;
  gap: 32px;
  padding: 32px 0;
  border-bottom: 1px solid rgba(255,255,255,.14);
  align-items: stretch;
}

/* квадрат фото */
.review-image{
  width: 160px;
  height: 160px;
  overflow: hidden;
  flex-shrink: 0;
}

.review-image img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* текст = высота фото */
.review-text{
  height: 160px;                 /* ← КЛЮЧ */
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.review-text p{
  font-size: 15px;
  line-height: 1.4;
  margin-bottom: 8px;
}

.review-author{
  font-size: 13px;
  opacity: .6;
}

/* MOBILE — 50 / 50 */
@media (max-width: 640px){
  .review-row{
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    padding: 20px 0;
  }

  .review-image{
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1;
  }

  .review-text{
    height: auto;
    aspect-ratio: 1 / 1;          /* ← текст в ровень фото */
    justify-content: center;
  }
}
.footer{
  padding: 24px 0;
  border-top: 1px solid rgba(255,255,255,.08);
}

.footer-inner{
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  opacity: .6;
}
/* =========================
   FAQ
========================= */

.faq{
  padding: 80px 0;
}

.faq-wrap{
  max-width: 900px;
  margin: 0 auto;
}

.faq-title{
  text-align: center;
  font-size: clamp(32px, 8vw, 64px);
  font-weight: 800;
  line-height: 1.05;
  margin-bottom: 48px;
}

.faq-list{
  border-top: 1px solid rgba(255,255,255,.15);
}

.faq-item{
  border-bottom: 1px solid rgba(255,255,255,.15);
}

.faq-question{
  width: 100%;
  background: none;
  border: none;
  color: #fff;
  padding: 20px 0;
  cursor: pointer;

  display: grid;
  grid-template-columns: 1fr 24px;
  gap: 16px;
  align-items: center;

  text-align: left;
  font-size: 18px;
  font-weight: 600;
}

/* ===== FAQ ICON ===== */

.faq-plus{
  width: 26px;
  height: 26px;
  background: #fff;          /* БЕЛЫЙ КВАДРАТ */
  position: relative;
  flex-shrink: 0;
}

.faq-plus::before,
.faq-plus::after{
  content: "";
  position: absolute;
  background: #000;          /* ЧЁРНЫЙ ПЛЮС */
  transition: transform .25s ease, opacity .25s ease;
}

.faq-plus::before{
  width: 14px;
  height: 2px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.faq-plus::after{
  width: 2px;
  height: 14px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* ===== FAQ ANSWER ANIMATION ===== */

.faq-answer{
  height: 0;
  overflow: hidden;
  transition: height .45s ease;
  font-size: 16px;
  line-height: 1.45;
  opacity: .9;
  padding-right: 40px;
}

/* active state */
.faq-item.active .faq-answer{
  opacity: .9;
  transform: translateY(0);
  margin-bottom: 16px;
}

.faq-item.active .faq-plus::after{
  opacity: 0;               /* + превращается в − */
}


/* active */
.faq-item.active .faq-answer{
  margin-bottom: 16px;
}

.faq-item.active .faq-plus::after{
  display: none; /* превращаем + в − */
}

/* Mobile */
@media (max-width: 600px){
  .faq-question{
    font-size: 16px;
  }
}
